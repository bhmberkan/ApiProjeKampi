@model List<ResultContactDto>

@{
    ViewData["Title"] = "ContactList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>İletişim Bilgileri Listesi</h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>

                                    <th scope="col">Adress</th>
                                    <th scope="col">Telefon</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Açık Saatler</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {

                                    <tr>

                                        <td>@x.Adress</td>
                                        <td>@x.Phone</td>
                                        <td>@x.Email</td>
                                        <td>@x.OpenHours</td>
                                        <td><a href="/Contact/DeleteContact/@x.ContactId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Contact/UpdateContact/@x.ContactId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/Contact/CreateContact/" class="btn btn-info">İletişim Bilgisi Ekle</a>
                    </div>
                </div>



            </div>

        </div>
    </div>
</section>




