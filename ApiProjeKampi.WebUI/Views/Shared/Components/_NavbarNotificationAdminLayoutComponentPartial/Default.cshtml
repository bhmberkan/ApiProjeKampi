@model List<ResultNotificationByIsReadFalseDto>


<li class="dropdown dropdown-list-toggle">
    <a href="#" data-toggle="dropdown"
       class="nav-link notification-toggle nav-link-lg">
        <i data-feather="bell" class="bell"></i>
    </a>
    <div class="dropdown-menu dropdown-list dropdown-menu-right pullDown">
        <div class="dropdown-header">
            Bildirimler
            <div class="float-right">
                <a href="#">Tümünü okundu olarak işaretle</a>
            </div>
        </div>
        <div class="dropdown-list-content dropdown-list-icons">
        @foreach (var x in Model)
            {
                <a href="/Notificaiton/NotificationDetail/@x.NotificationId" class="dropdown-item">
                    <span class="dropdown-item-icon bg-info text-white">
                        <i class="@x.IconUrl"></i>
                    </span> <span class="dropdown-item-desc">
                         <b>
                           @x.Description
                        </b> <span class="time">
                           @x.NotificationDate.ToString("dd MMMM yyy - HH:mm")
                        </span>
                    </span>
                </a>
            }
            
        
        </div>
        <div class="dropdown-footer text-center">
            <a href="/Notification/NotificationList">Tümünü Gör <i class="fas fa-chevron-right"></i></a>
        </div>
    </div>
</li>