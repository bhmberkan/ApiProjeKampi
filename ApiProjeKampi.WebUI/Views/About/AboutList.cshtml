@model List<ResultAboutDto>
@{
    ViewData["Title"] = "AboutList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
   
}




<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Hakkımızda </h4>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Açıklama</th>
                         
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                  
                                    <tr>
                                        <th scope="row">@x.AboutId</th>
                                        <td>@x.Title</td>
                                        <td>@x.Description</td>
                                        <td><a href="/About/DeleteAbout/@x.AboutId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/About/UpdateAbout/@x.AboutId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        <a href="/About/CreateAbout/" class="btn btn-info">Ekle</a>
                    </div>
                </div>



            </div>

        </div>
    </div>
</section>



