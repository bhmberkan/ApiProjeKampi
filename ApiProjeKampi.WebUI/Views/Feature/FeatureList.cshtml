@model List<ResultFeatureDto>

@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}



<section class="section">
    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-12 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Öne çıkan Alan işlemleri</h4>
                       
                    </div>
                   
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Başlık</th>
                                    <th scope="col">Alt Başlık</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var x in Model)
                                {
                                    count ++; 
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@x.Title</td>
                                        <td>@x.SubTitle</td>
                                        <td>@x.Description</td>
                                        <td><a href="/Feature/DeleteFeature/@x.FeatureId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Feature/UpdateFeature/@x.FeatureId" class="btn btn-success">Güncelle</a></td>

                                    </tr>
                                }


                            </tbody>
                        </table>
                        @if (Model.Count == 1 )
                        {
                            <a href="#" class="btn btn-info" onclick="return false;">Feature Mevcut </a>
                        }
                       else
                       {
                            <a href="/Feature/CreateFeature/" class="btn btn-info">Yeni Kategory Ekle</a>
                       }
                    </div>
                </div>



            </div>

        </div>
    </div>
</section>



